<h1>My tasks</h1>

<div class="tasks-container">
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <%= link_to task_uncomplete_path(task), class: "checkbox" do %>
            <i class="far fa-check-square"></i>
          <% end %>
        <% else %>
          <%= link_to task_complete_path(task), class: "checkbox" do %>
            <i class="far fa-square"></i>
          <% end %>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        -
        <%= link_to task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div class="new-task">
  <%= link_to "<i class='fas fa-plus'></i> Add a new task".html_safe, new_task_path %>
</div>
